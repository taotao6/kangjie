
.address {
	width: 100%;
	background-color: #fff;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
	margin-bottom: 30rpx;
}
.address-in {
	width: 92%;
	margin: 0 auto;
}
.address-title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	color: black;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 32rpx;
}
.address-body {
	color: #666666;
	font-size: 26rpx;
	margin-top: 20rpx;
	margin-bottom: 40rpx;
	line-height: 1.5;
}
.address-footer {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.address-footer-left {
	width: 65%;
}
.address-footer-right {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.footer-right-1,.footer-right-2{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 24rpx;
	color: #969696;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
	vertical-align: bottom;
}
.right-1-img,
.right-2-img {
	width: 30rpx;
	height: 30rpx;
	margin-right: 10rpx;
}
.addNew{
	position: fixed;
	bottom: 0;
	width: 100vw;
	height: 100rpx;
	background-color: #0DAAFB;
	line-height: 100rpx;
	text-align: center;
	color: #fff;
	font-size: 32rpx;
}

