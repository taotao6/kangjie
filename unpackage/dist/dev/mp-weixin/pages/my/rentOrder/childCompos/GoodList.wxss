.demo-popup .s-popup-wrapper {
  border-radius: 20rpx;
  background-color: #ff0000;
}
.good-list {
  width: 100%;
  margin: 20rpx 0;
  background-color: white;
  padding: 20rpx 0;
}
.good-list-in {
  width: 92%;
  margin: 0 auto;
}
.good-list-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.list-title-left {
  font-size: 28rpx;
  color: #666666;
}
.list-title-right {
  font-size: 28rpx;
  color: #0DAAFB;
}
.sub-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 30rpx;
}
.sub-item-img {
  width: 170rpx;
  height: 150rpx;
}
.sub-item-content {
  margin-left: 20rpx;
}
.item-title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 30rpx;
  width: 500rpx;
  /* height: 28upx; */
}
.item-time {
  font-size: 20rpx;
  margin-bottom: 10rpx;
  color: #666;
}
.item-deposit {
  font-size: 20rpx;
  color: #f37200;
  margin-bottom: 10rpx;
}
.item-price {
  font-size: 30rpx;
  color: #f14645;
  margin-bottom: 10rpx;
}
.item-bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.item-price-icon {
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
}
.good-list-all {
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
  -webkit-flex-direction: row-reverse;
          flex-direction: row-reverse;
  font-size: 24rpx;
}
.list-all-in {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.list-all-left {
  margin-right: 20rpx;
}
.good-list-footer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
  -webkit-flex-direction: row-reverse;
          flex-direction: row-reverse;
  margin-top: 26rpx;
}
.list-footer-in {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.list-footer-left,
.list-footer-right {
  width: 152rpx;
  height: 54rpx;
  border-radius: 27rpx;
  font-size: 26rpx;
  line-height: 54rpx;
  text-align: center;
}
.list-footer-left {
  border: 1px solid #c9c9c9;
}
.list-footer-right {
  border: 1px solid #0DAAFB;
  color: #0DAAFB;
  margin-left: 30rpx;
}

